<commands version="1.0">
	<contents>
		<summary>Creates the contents node in an extisting package.xml</summary>
		<function>doContents</function>
		<shortcut>ctnt</shortcut>
		<options>
			<templatefile>
				<shortopt>T</shortopt>
				<doc>Path to template package2.xml</doc>
				<arg>TEMPLATEFILE</arg>
			</templatefile>
			<srcdir>
				<shortopt>S</shortopt>
				<doc>Path to source code folder.</doc>
				<arg>SRCDIR</arg>
			</srcdir>
			<destinationdir>
				<shortopt>D</shortopt>
				<doc>Path to destination folder where to save the generated package2.xml</doc>
				<arg>DESTINATIONDIR</arg>
			</destinationdir>
			<dirroles>
                <shortopt>R</shortopt>
                <doc>Roles configuration e.g. directory:role;directory:role;...</doc>
                <arg>DIRROLES</arg>
            </dirroles>
		</options>
		<doc>[descfile] Creates the contents node in an existing package.xml.</doc>
	</contents>	
</commands>